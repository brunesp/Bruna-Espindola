<div class="row mt-5">
  <div class="col-md-6 m-auto">   
      <h1 class="text-center mb-3">
         Cadastro
      </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Nome</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Nome"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Senha</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Senha"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirma a senha</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirme a Senha"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block ">
          Register
        </button>
      </form>
      <p class="lead mt-4">JÃ¡ possui cadastro? <a href="/users/login">Login</a></p>
    </div>
  </div>

